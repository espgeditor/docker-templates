<?xml version="1.0"?>
<Container version="2">
  <Name>espg</Name>
  <Repository>drew4/espg-alpha</Repository>
  <Registry>https://hub.docker.com/r/drew4/espg-alpha</Registry>
  <Network>bridge</Network>
  <MyIP></MyIP>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/drew4/ESPG</Support>
  <Project>ESPG Streaming Service</Project>
  <Overview>
    ESPG is a streaming service platform that supports VOD (Video on Demand) for movies and TV series.
  </Overview>
  <Category>MediaServer:Video MediaServer:Movies MediaServer:TV</Category>
  <WebUI>http://[IP]:[PORT:8080]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/drew4/ESPG/main/espg.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/drew4/ESPG/main/icon-espg.png</Icon>
  
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID" Type="Variable" Display="advanced" Required="true" Mask="false"/>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID" Type="Variable" Display="advanced" Required="true" Mask="false"/>
  
  <Config Name="Web Interface Port" Target="8080" Default="8080" Mode="tcp" Description="nginx web interface port" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="Backend API Port" Target="8000" Default="8000" Mode="tcp" Description="Backend API port" Type="Port" Display="always" Required="true" Mask="false"/>
  
  <Config Name="Movies Directory" Target="/movies" Default="/mnt/user/Media/Movies" Mode="rw" Description="Movies directory path" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="TV Series Directory" Target="/tv" Default="/mnt/user/Media/TV" Mode="rw" Description="TV series directory path" Type="Path" Display="always" Required="true" Mask="false"/>
  
  <Config Name="PostgreSQL Data Directory" Target="/var/lib/postgresql/15/main" Default="/mnt/user/appdata/espg/postgresql" Mode="rw" Description="PostgreSQL data directory path" Type="Path" Display="advanced" Required="true" Mask="false"/>
  
  <Config Name="Database User" Target="DB_USER" Default="espg" Mode="" Description="PostgreSQL user" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Database Password" Target="DB_PASSWORD" Default="test" Mode="" Description="PostgreSQL password" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Database Name" Target="DB_NAME" Default="espg" Mode="" Description="PostgreSQL database name" Type="Variable" Display="always" Required="true" Mask="false"/>
  
  <Config Name="Redis URL" Target="REDIS_URL" Default="redis://localhost:6379/1" Mode="" Description="Redis URL" Type="Variable" Display="advanced" Required="true" Mask="false"/>
  <Config Name="Debug Mode" Target="DEBUG" Default="False" Mode="" Description="Enable debug mode" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Time Zone" Target="TZ" Default="America/Chicago" Mode="" Description="Container timezone" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Reset Database" Target="RESET_DB" Default="false" Mode="" Description="Set to 'true' to reset the database and trigger first-time setup on next start" Type="Variable" Display="always" Required="false" Mask="false"/>
  
  <Config Name="Django Allowed Hosts" Target="DJANGO_ALLOWED_HOSTS" Default="127.0.0.1,localhost,192.168.1.7" Mode="" Description="Comma-separated list of allowed hosts for Django (e.g. 127.0.0.1,localhost,192.168.1.7)" Type="Variable" Display="always" Required="true" Mask="false"/>
  
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/espg/media</HostDir>
      <ContainerDir>/app/backend/media</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/espg/static</HostDir>
      <ContainerDir>/app/backend/static</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/espg/postgresql</HostDir>
      <ContainerDir>/var/lib/postgresql/15/main</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  
  <Environment>
    <Variable>
      <Name>PATH</Name>
      <Value>/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin</Value>
    </Variable>
    <Variable>
      <Name>PGDATA</Name>
      <Value>/var/lib/postgresql/15/main</Value>
    </Variable>
  </Environment>
  
  <Labels>
    <Label>
      <Name>org.opencontainers.image.title</Name>
      <Value>ESPG</Value>
    </Label>
    <Label>
      <Name>org.opencontainers.image.description</Name>
      <Value>ESPG Streaming Service</Value>
    </Label>
    <Label>
      <Name>org.opencontainers.image.source</Name>
      <Value>https://github.com/drew4/ESPG</Value>
    </Label>
  </Labels>
  
  <ExtraParams>--restart unless-stopped</ExtraParams>
  
  <PostArgs></PostArgs>
  
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
</Container>
