<?xml version="1.0" encoding="UTF-8"?>
<Container version="2">
  <Name>espglite</Name>
  <Repository>espg/espglite</Repository>
  <Registry>https://hub.docker.com/r/espg/espglite</Registry>
  <Network>bridge</Network>
  <MyIP></MyIP>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support></Support>
  <Project>ESPG Lite</Project>
  <Overview>
    ESPG Lite
  </Overview>
  <Category>MediaServer:Video MediaServer:Movies MediaServer:TV</Category>
  <WebUI>http://[IP]:[PORT:59980]</WebUI>
  <TemplateURL></TemplateURL>
  <Icon>https://raw.githubusercontent.com/espg/espglite/main/icon.png</Icon>
  <ExtraParams></ExtraParams>
  <PostArgs></PostArgs>
  <CPUset></CPUset>
  <DateInstalled></DateInstalled>
  <DonateText></DonateText>
  <DonateLink></DonateLink>
  <Requires></Requires>
  <Config Name="WebUI Port" Target="80" Default="59980" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">59980</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="Config Directory" Target="/app/config" Default="/mnt/user/appdata/espglite" Mode="rw" Description="Configuration and database storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/espglite</Config>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>59980</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/espglite</HostDir>
      <ContainerDir>/app/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
</Container>
